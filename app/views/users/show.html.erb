<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if @user.image? %>
          <%= image_tag @user.image.thumb.url %>
        <% else %>
          <%= image_tag 'noimage.gif' %>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%= paginate(@microposts) %>
      </ol>
    <% end %>
    
